#!/bin/sh
#
# General purpose zopen script
#
printSyntax()
{
  echo "" >&2
  echo "Syntax: zopen <command>" >&2
  echo "where <command> may be one of the following:" >&2
  echo " init: generate $HOME/.zopen-config; builds file structure; bootstraps" >&2
  echo " build: invokes the build script." >&2
  echo " download: downloads z/OS Open Tool package(s)" >&2
  echo " install: installs z/OS Open Tool package(s))" >&2
  echo " generate: generate a zopen project" >&2
  echo " update-cacert: update the cacert.pem file" >&2
  echo " upgrade: upgrades already installed tools" >&2
  echo " list: lists information about zOpen Tool packages" >&2
  echo " query: queries zOpen Tool packages (see " >&2
  echo " search: searches remote repo for zOpen Tool package" >&2
  echo " remove: removes installed zOpen Tool packages" >&2
  echo " alt: switch local versions of zOpen Tool packages" >&2
  echo " clean: cleans various aspects of zOpen Tool packages" >&2
  echo "" >&2
}

printHelp() 
{
  args=$*
  echo "zopen is a general purpose script to be used with the ZOSOpenTools ports." >&2
  printSyntax
  echo "Example usage:" >&2
  echo " # Build a port" >&2
  echo " zopen build -v # Build port" >&2
  echo " # List available ports to download" >&2
  echo " zopen install" >&2
  echo " # Download binaries from Github" >&2
  echo " zopen install --all" >&2
  echo " # Generate a zopen template project" >&2
  echo " zopen generate" >&2
}

export bindir="$( cd "$(dirname "$0")" >/dev/null 2>&1 && pwd -P )"
. "${bindir}/lib/common.inc"

args=$*
while [[ $# -gt 0 ]]; do
  case "$1" in
    "build")
      shift
      exec "${bindir}/lib/zopen-build" $@
      ;;
    "download")
      shift
      exec "${bindir}/lib/zopen-download" -d $@
      ;;
    "install")
      shift
      exec "${bindir}/lib/zopen-download" $@
      ;;
    "upgrade" | "up")
      shift
      exec "${bindir}/lib/zopen-download" -u $@
      ;;
    "generate")
      shift
      exec "${bindir}/lib/zopen-generate" $@
      ;;
    "update-cacert")
      shift
      exec "${bindir}/lib/zopen-update-cacert" $@
      ;;
    "init")
      shift
      exec "${bindir}/lib/zopen-init" $@
      ;;
    "list" | "-l")
      shift
      exec "${bindir}/lib/zopen-query" "--list" $@
      ;;
    "query" | "-q")
      shift
      exec "${bindir}/lib/zopen-query" $@
      ;;
    "search" | "-s")
      shift
      exec "${bindir}/lib/zopen-query" --remote-search $@
      ;;
    "remove" | "-r" | "uninstall" | "un" | "erase" | "e")
      shift
      exec "${bindir}/lib/zopen-remove" $@
      ;;
    "alt" | "-a")
      shift
      exec "${bindir}/lib/zopen-alt" $@
      ;;
    "clean")
      shift
      exec "${bindir}/lib/zopen-clean" $@
      ;;
    "help" | "-h" | "--h" | "-help" | "--help" | "-?" | "-syntax")
      printHelp "${args}"
      exit 0
      ;;
    *)
      printSoftError "Unknown option ${1} specified"
      printSyntax "${args}"
      exit 8
      ;;
  esac
  shift;
done

printHelp
